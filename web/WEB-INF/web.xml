<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>SummaryTask4</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <resource-ref>
        <res-ref-name>jdbc/periodical</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!--============================================================
	Controller
=============================================================-->
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>ua.nure.yaritenko.SummaryTask4.web.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <!--============================================================
        Encoding support filter
    =============================================================-->
   <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>ua.nure.yaritenko.SummaryTask4.web.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>
    <!--============================================================
           Session listener
       =============================================================-->
    <listener>
        <listener-class>ua.nure.yaritenko.SummaryTask4.web.listener.SessionListener</listener-class>
    </listener>

    <!--============================================================
        Context listener
    =============================================================-->
    <listener>
        <listener-class>ua.nure.yaritenko.SummaryTask4.web.listener.ContextListener</listener-class>
    </listener>

    <!--============================================================
        Error page
    =============================================================-->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>
    <!--============================================================
            Resource Bundle
        =============================================================-->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>resources</param-value>
    </context-param>
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
        <param-value>ru</param-value>
    </context-param>
    <context-param>
        <param-name>locales</param-name>
        <param-value>/WEB-INF/locales.properties</param-value>
    </context-param>


</web-app>